<p id='alert'><%= alert %></p>

<div class="container">
<div class="container mt-4">

  <div class="row justify-content-center">
    <!-- Colonne pour le texte -->
    <div class="col-md-7">
      <p id='alert'><%= alert %></p>
      <br>
      <br>
      <br>
      <p class="display-4 mb-4"><strong class="text-primary">facebook</strong></p>
      <p class="display-6 mb-4">Avec Facebook, partagez et restez en <br>contact avec votre entourage.</p>
    </div>

    <!-- Colonne pour le formulaire -->
    <div class="col-md-4 offset">
      <div class="card p-4 shadow">
        <%= form_tag sessions_path, class: 'mt-3' do |form| %>
          <div class="form-group">
            <%= label_tag :email %>
            <%= text_field_tag :email, nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, class: 'form-control' %>
          </div>
          <br>
          <div class="form-group">
            <center><%= submit_tag 'Se connecter', class: 'btn btn-primary btn-block' %></center>
          </div>
        <% end %>

        <br>
        <center><p class="text-primary font-weight-light">Mot de passe oublié ?</p></center>

        <% if current_user %>
          Logged in as <%= current_user.email %>.
          <%= link_to 'Log Out', logout_path %>
        <% else %>
          <%= submit_tag 'Créer un compte', class: 'btn btn-success btn-block' %>
        <% end %>

        <p class="mt-2"><strong>Créer une Page</strong> pour une célébrité, une marque ou une entreprise.</p>
        <p id='notice'><%= notice %></p>
      </div>
    </div>
  </div>
</div>
